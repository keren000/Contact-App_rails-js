<div class="start-pages signup-login">
  <h4 class="blue-bold">Sign Up!</h4><br>
    <%= form_for @user do |f| %>
      <%= f.text_field :email, placeholder: "Email", :size => 25 %>
      <br /><br />
      <%= f.text_field :name, placeholder: "Username", :size => 25 %>
      <br /><br />
      <%= f.password_field :password, placeholder: "Password", :size => 25 %>
      <br /><br />
      <%= f.submit "Create Account", :class => 'btn btn-block btn-success' %>
      <br />
    <% end %>

    <div class="user-errors">
      <% if @user.errors.any? %>
        <div id="error_explanation">
            <p><%= pluralize(@user.errors.count, "error") %> Prohibited this account from being created:</p>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

</div>
