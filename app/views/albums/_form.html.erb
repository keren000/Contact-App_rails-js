<%= form_for @album ,html: { multipart: true } do |f| %>          
    <div class="panel-body">
      
      <% if @album.errors.any? %>

        <div class="row">
          <div class="col-md-12">
            <div class="alert alert-danger">
              <h3>Correct this following errors:</h3>

              <ul>
                <% @album.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

      <% end %>

      <div class="form-horizontal">
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <%= f.label :name, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.text_field :name, class: "form-control" %>                
              </div>
            </div>

            <div class="form-group">
              <%= f.label :mobile, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.phone_field :phone, class: "form-control" %>                
              </div>              
            </div>

            <div class="form-group">
              <%= f.label :email, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.email_field :email, class: "form-control" %>                
              </div>              
            </div>

            <div class="form-group">
              <%= f.label :address, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.text_area :address, class: "form-control" %>                
              </div>
            </div>
            <div class="form-group">
            </div></div>
           <div class="col-md-4">
            <div class="fileinput fileinput-new" data-provides="fileinput">
              <div class="fileinput-new thumbnail" style="width: 150px; height: 150px;">                
                <%= image_tag @album.avatar.url(:medium) %>
              </div>
              <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 150px; max-height: 150px;"></div>
              <div class="text-center">
                 <span class="btn btn-default btn-file"><span class="fileinput-new">Choose Photo</span>
                 <span class="fileinput-exists">Change</span><%= f.file_field :avatar %></span>
                   <a class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <button type="submit" class="btn btn-primary">Save</button>

              <%= link_to "Cancel", albums_path, id:'album_index', class: "btn btn-info" %>              
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>